<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.housemgt.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.housemgt.model.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="is_admin" property="isAdmin" jdbcType="INTEGER" />
    </resultMap>
    <sql id="Base_Column_List" >
    id, username, password, is_admin
  </sql>
    <select id="queryInfoByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
         FROM t_user WHERE username = #{username,jdbcType=VARCHAR}
    </select>

    <insert id="insertData" parameterType="com.housemgt.model.User">
        INSERT INTO t_user (id, username,password, is_admin )
        VALUES ( #{id, jdbcType=VARCHAR}, #{username, jdbcType=VARCHAR},#{password, jdbcType=VARCHAR}, #{isAdmin, jdbcType=VARCHAR});
    </insert>
</mapper>
